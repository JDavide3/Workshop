<mvc:View controllerName="progferieDIP.controller.View2" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Gestione Ferie e Permessi" />
                </f:heading>
                <f:content>
                    <OverflowToolbar />
                </f:content>
                <f:navigationActions />
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true" />
        </f:header>
        <f:content>
            <Table noDataText="" id="tabella" sticky="HeaderToolbar,ColumnHeaders" inset="false" width="auto">
                <headerToolbar>
                    <Toolbar height="60px">
                        <l:VerticalLayout>
                            <Title text="Gestione Ferie e Permessi" level="H2" class="sapUiMediumMarginTop" />
                        </l:VerticalLayout>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column width="20em">
                        <Panel id="datePanel">
                            <Label text="Data inizio" labelFor="DTP2" />
                            <DateTimePicker id="dataI" showCurrentDateButton="true" showCurrentTimeButton="true" value="" valueFormat="yyyy-MM-ddTHH:mm:ss" change="handleChange" class="sapUiSmallMarginBottom" />
                        </Panel>
                    </Column>
                    <Column width="20em">
                        <Panel id="datePanel2">
                            <Label text="Data fine" labelFor="DTP3" />
                            <DateTimePicker id="dataF" showCurrentDateButton="true" showCurrentTimeButton="true" value="" valueFormat="yyyy-MM-ddTHH:mm:ss" change="handleChange" class="sapUiSmallMarginBottom" />
                        </Panel>
                    </Column>
                    <Column>
                        <l:VerticalLayout width="100%">
                            <Label text="Nome e Cognome" labelFor="note" />
                            <Input class="sapUiMediumMarginBottom" id="nomeCognome" placeholder="Nome e Cognome" />
                        </l:VerticalLayout>
                    </Column>
                    
                    <Column hAlign="Begin">
                        <l:HorizontalLayout class="sapUiResponsiveMargin">
                            <!--<Button type="Emphasized" width="4em" icon="sap-icon://edit" class="sapUiSmallMarginEnd"/>
                            <Button type="Success" press="onConfirm" width="4em" icon="sap-icon://save" class="sapUiSmallMarginEnd"/>
                            <Button type="Negative" width="4em" icon="sap-icon://delete" class="sapUiSmallMarginEnd"/> -->
                            <Button type="Success" press="onConfirm" width="4em" icon="sap-icon://save" class="sapUiSmallMarginEnd" />
                        </l:HorizontalLayout>
                    </Column>
                    <Column/>
                    <Column/>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                        <l:VerticalLayout>
                            <Text text="Data Prenotazione" />
                            <Text text="{Prenotazioni>dataPrenotazione}" />
                        </l:VerticalLayout>
                        <l:VerticalLayout>
                            <Text text="Data Inizio" />
                            <Panel id="datePanel3">
                            <Text text="{Prenotazioni>dataInizio}" />
                        </Panel>
                        </l:VerticalLayout>
                        <l:VerticalLayout>
                            <Text text="Data Fine" />
                            <Text text="{Prenotazioni>dataFine}" />
                        </l:VerticalLayout>
                        <l:VerticalLayout>
                            <Text text="Stato Richiesta" />
                            <l:HorizontalLayout >
                            <core:Icon src="sap-icon://thumb-up" class="size1" color="#31ad00" visible="{= ${Prenotazioni>isApproved}===true}">
                    		</core:Icon>
                            <core:Icon src="sap-icon://thumb-down" class="size1" color="#ad1100" visible="{= ${Prenotazioni>isRejected}===true}">
                    		</core:Icon>
                            <core:Icon src="sap-icon://pending" class="size1" color="#d9db35" visible="{= ${Prenotazioni>isRejected}===true}">
                    		</core:Icon>
                            </l:HorizontalLayout>
                        </l:VerticalLayout>
                        <HBox>
                        <Button type="Emphasized" press="onEdit" width="4em" icon="sap-icon://edit" class="sapUiSmallMarginEnd" />
                        <Button type="Success" press="onConfirm" width="4em" icon="sap-icon://save" class="sapUiSmallMarginEnd" />
                        </HBox>
                            <HBox>
                                <!--<Button type="Success" icon="sap-icon://accept" press="onSave" />-->
                                <!--visible="{Books>isEdit}"-->
                                <!--<Button type="Negative" icon="sap-icon://decline" press="onEdit" />-->
                                <!--visible="{= ${Books>isEdit}===true?false:true}"-->
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
