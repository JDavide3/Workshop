<mvc:View controllerName="progferieMAN.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:si="sap.suite.ui.commons.statusindicator">
    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Manager" />
                </f:heading>
                <f:content>
                    <OverflowToolbar />
                </f:content>
                <f:actions>
                    <Button text="Visualizza tutti" type="Emphasized" icon="sap-icon://show" press="onAjaxSearch" />
                    <Button text="Da approvare" type="Critical" press="onPending" />
                    <Button text="Approvate/Rifiutate" type="Emphasized" icon="sap-icon://show" press="onChanged" />
                    <Button text="Esporta" type="Neutral" icon="sap-icon://action" press="---" />
                </f:actions>
                <f:navigationActions />
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true" />
        </f:header>
        <f:content>
            <Table noDataText="" id="tabManager" sticky="HeaderToolbar,ColumnHeaders" items="{Prenotazioni>/}" inset="false" class="sapFDynamicPageAlignContent" width="auto">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Gestione attivitÃ " level="H2" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Data Prenotazione" />
                    </Column>
                    <Column>
                        <Text text="Data Inizio" />
                    </Column>
                    <Column>
                        <Text text="Data Fine" />
                    </Column>
                    <Column>
                        <Text text="Richiedente" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Azioni" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <l:VerticalLayout>
                                <Text text="{Prenotazioni>dataPrenotazione}" />
                            </l:VerticalLayout>
                            <l:VerticalLayout>
                                <Text text="{Prenotazioni>dataInizio}" />
                            </l:VerticalLayout>
                            <l:VerticalLayout>
                                <Text text="{Prenotazioni>dataFine}" />
                            </l:VerticalLayout>
                            <l:VerticalLayout>
                                <Text text="{Prenotazioni>createdBy}" />
                            </l:VerticalLayout>
                            <si:StatusIndicator id="indicator1" width="510px" height="70px" viewBox="0 1 510 82" class="sapUiSmallMargin">
                                <si:ShapeGroup>
                                    <si:Rectangle x="2" y="2" width="500" height="90" strokeWidth="8" strokeColor="black" fillingType="Linear" />
                                </si:ShapeGroup>
                                <si:propertyThresholds>
                                    <si:PropertyThreshold fillColor="Critical" toValue="100" />
                                    <si:PropertyThreshold fillColor="Error" toValue="66" />
                                    <si:PropertyThreshold fillColor="Good" toValue="33" />
                                </si:propertyThresholds>
                            </si:StatusIndicator>
                            
                            <HBox>
                                <l:HorizontalLayout class="sapUiResponsiveMargin">
                                    <Button type="Success" press="onApprove" text="Approva" icon="sap-icon://thumb-up" class="sapUiSmallMarginEnd" visible="{= ${Prenotazioni>isRejected}===false &amp;&amp; ${Prenotazioni>isApproved}===false}" />
                                    <Button type="Negative" press="onReject" text="Rifiuta" class="sapUiSmallMarginEnd" icon="sap-icon://thumb-down" visible="{= ${Prenotazioni>isRejected}===false &amp;&amp; ${Prenotazioni>isApproved}===false}" />
                                     <core:Icon src="sap-icon://thumb-up" id="approvato" class="size1" color="#31ad00" visible="{= ${Prenotazioni>isApproved}===true}">
                    		</core:Icon>
                            <core:Icon src="sap-icon://thumb-down" id="rifiutato" class="size1" color="#ad1100" visible="{= ${Prenotazioni>isRejected}===true}">
                    		</core:Icon>
                                </l:HorizontalLayout>
                            </HBox>
                        
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>